node {
    stage('Checkout') {
        git branch: 'main', url: 'https://github.com/OT-MICROSERVICES/salary-api.git'
    }

    stage('Build') {
        // Build using Jenkins-managed Maven
        withMaven(maven: 'Maven') {
            sh 'mvn clean install -DskipTests'
        }
    }

    stage('SonarQube Analysis') {
        withMaven(maven: 'Maven') {
            withSonarQubeEnv('sonarqube') {
               sh "mvn sonar:sonar -Dsonar.projectKey=salary-api -Dsonar.projectName='Salary API' -Dsonar.projectVersion=${BUILD_NUMBER}"
           }
        }
    }
}






