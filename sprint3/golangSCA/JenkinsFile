pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vladopajic/go-test-coverage.git'
            }
        }

        stage('Static Code Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    script {
                        def scannerHome = tool 'sonar-scanner'   // Jenkins Global Tool Config ka name
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                              -Dsonar.projectKey=go-project \
                              -Dsonar.projectName="Go Project" \
                              -Dsonar.projectVersion=${BUILD_NUMBER}
                        """
                    }
                }
            }
        }
    }
}

